\DeclareFieldFormat[proposal]{title}{{%                         % title
  \mkbibbold{%
    \MakeSentenceCase*{#1}%
  }%
}}
\DeclareFieldFormat[proposal]{journaltitle}{{#1}}               % program
\DeclareNameFormat[proposal]{editora}{{#3\space#1\space(PI)}}   % investigator_p
